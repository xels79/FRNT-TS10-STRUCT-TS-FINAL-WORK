{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "target": "ES2020",
    "allowJs": true,
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "outDir": "./tsDist/",
    "experimentalDecorators": true,
    "baseUrl": "app",
    "importHelpers": true,

    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@rest/*": [
        "services/rest/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@myCss": [
        "assets/styles/main.scss"
      ],
      "@classess/*": [
        "classess/*"
      ],
      "@models/*": [
        "models/*"
      ]
    }
  },

  "include": [
    "./**/*"
  ],

  "exclude": [
    "node_modules"
  ],
}
